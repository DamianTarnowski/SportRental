                            priceDescription = $"{days} dni √ó {product.DailyPrice.ToString("N0")} z≈Ç";
                        }
                        
                        <div class="price-summary">
                            <span>@priceDescription</span>
                            <span class="price-total">= @totalPrice.ToString("N0") z≈Ç</span>
                        </div>
                    }
                </div>

                @if (!string.IsNullOrWhiteSpace(product.Description))
                {
                    <div class="product-mobile-description">
                        <h3>üìù Opis</h3>
                        <p>@product.Description</p>
                    </div>
                }
            </div>

            <!-- Mobile Add to Cart - Sticky -->
