                    <div class="product-mobile-image-placeholder">üì∑</div>
                }
                
                <!-- Back button -->
                <button class="product-mobile-back" @onclick="GoBack">‚Üê</button>
                
                <!-- Badges -->
                <div class="product-mobile-image-badges">
                    @if (product.IsAvailable && product.AvailableQuantity > 0)
                    {
                        <span class="badge-available">‚úì Dostƒôpny</span>
                    }
                    else
                    {
                        <span class="badge-unavailable">‚úó Niedostƒôpny</span>
                    }
                </div>
            </div>

            <!-- Mobile Info -->
            <div class="product-mobile-content">
                @if (!string.IsNullOrWhiteSpace(product.Category))
                {
                    <span class="product-mobile-category">üè∑Ô∏è @product.Category</span>
                }
                
                <h1 class="product-mobile-title">@product.Name</h1>
                
                <div class="product-mobile-prices">
                    <div class="price-main">
                        <span class="price-value">@product.DailyPrice.ToString("N0") z≈Ç</span>
                        <span class="price-period">/ dzie≈Ñ</span>
                    </div>
                    @if (product.HourlyPrice.HasValue && product.HourlyPrice.Value > 0)
                    {
                        <div class="price-hourly">
                            <span>@product.HourlyPrice.Value.ToString("N0") z≈Ç</span>
                            <span>/ godz.</span>
                        </div>
                    }
                </div>

                <div class="product-mobile-stock">üì¶ @product.AvailableQuantity szt. w magazynie</div>

                <!-- Dates selection -->
                <div class="product-mobile-dates">
                    <h3>üìÖ Okres wypo≈ºyczenia</h3>
                    <div class="dates-row">
                        <div class="date-input">
                            <label>Od</label>
                            <input type="date" @bind="startDate" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="date-input">
                            <label>Do</label>
                            <input type="date" @bind="endDate" min="@startDate?.AddDays(1).ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    
                    <div class="rental-type-row">
                        <select @bind="selectedRentalType" class="rental-type-select">
                            <option value="0">üìÖ Wynajem dzienny</option>
                            @if (product.HourlyPrice.HasValue && product.HourlyPrice.Value > 0)
                            {
                                <option value="1">‚è∞ Wynajem godzinowy</option>
                            }
                        </select>
                        @if (selectedRentalType == 1)
                        {
                            <input type="number" @bind="selectedHours" min="1" max="24" 
                                   class="hours-input" placeholder="Godz." />
                        }
                    </div>

                    @if (startDate.HasValue && endDate.HasValue && endDate > startDate)
                    {
                        var days = (endDate.Value - startDate.Value).Days;
                        decimal totalPrice;
                        string priceDescription;
                        
                        if (selectedRentalType == 1 && product.HourlyPrice.HasValue)
