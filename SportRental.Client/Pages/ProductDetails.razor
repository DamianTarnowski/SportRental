                <h3>Produkt nie znaleziony</h3>
                <p>Produkt m√≥g≈Ç zostaƒá usuniƒôty</p>
                <button class="product-mobile-cta" @onclick="GoBack">‚Üê Wr√≥ƒá do katalogu</button>
            </div>
        }
        else
        {
            <!-- Mobile Image -->
            <div class="product-mobile-image">
                @if (!string.IsNullOrWhiteSpace(product.GetImageUrl(800)))
                {
