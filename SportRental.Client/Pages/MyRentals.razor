@code {
    private bool _isLoading = true;
    private List<MyRentalDto>? _rentals;

    protected override async Task OnInitializedAsync()
    {
        await LoadRentalsAsync();
    }

    private async Task LoadRentalsAsync()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _rentals = await Api.GetMyRentalsAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"B≈ÇƒÖd podczas ≈Çadowania wypo≈ºycze≈Ñ: {ex.Message}", Severity.Error);
            _rentals = new List<MyRentalDto>();
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private string GetStatusClass(string status)
    {
        return status.ToLower() switch
        {
            "draft" or "pending" => "pending",
            "reserved" or "confirmed" => "reserved",
            "active" or "onrent" => "active",
            "returned" or "completed" => "completed",
            "cancelled" => "cancelled",
            "overdue" => "overdue",
            _ => ""
        };
    }

    private string GetStatusEmoji(string status)
    {
        return status.ToLower() switch
        {
            "draft" or "pending" => "‚è≥",
            "reserved" or "confirmed" => "üìÖ",
            "active" or "onrent" => "‚úÖ",
            "returned" or "completed" => "üèÅ",
            "cancelled" => "‚ùå",
            "overdue" => "‚ö†Ô∏è",
            _ => "üìã"
        };
    }

    private string GetStatusText(string status)
    {
        return status.ToLower() switch
        {
            "draft" => "Szkic",
            "pending" => "OczekujƒÖce",
            "confirmed" => "Potwierdzone",
            "active" => "Aktywne",
            "completed" => "Zako≈Ñczone",
            "cancelled" => "Anulowane",
            _ => status
        };
    }

    // Status wydania/zwrotu sprzƒôtu
    private string GetEquipmentStatusClass(MyRentalDto rental)
    {
        if (rental.ReturnedAtUtc.HasValue)
            return "completed";
        if (rental.IssuedAtUtc.HasValue)
            return rental.IsOverdue ? "overdue" : "active";
        return "pending";
    }

    private string GetEquipmentStatusEmoji(MyRentalDto rental)
    {
        if (rental.ReturnedAtUtc.HasValue)
            return "‚úÖ";
        if (rental.IssuedAtUtc.HasValue)
            return rental.IsOverdue ? "‚ö†Ô∏è" : "üì¶";
        return "‚è≥";
    }

    private string GetEquipmentStatusText(MyRentalDto rental)
    {
        if (rental.ReturnedAtUtc.HasValue)
            return $"Zwr√≥cono {rental.ReturnedAtUtc.Value.ToLocalTime():dd.MM}";
        if (rental.IssuedAtUtc.HasValue)
            return $"Wydano {rental.IssuedAtUtc.Value.ToLocalTime():dd.MM}";
        return "Oczekuje na odbi√≥r";
    }

    private void ViewDetails(Guid rentalId)
    {
        Nav.NavigateTo($"/my-rentals/{rentalId}");
    }
}
