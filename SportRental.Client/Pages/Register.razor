@code {
    private RegisterModel _model = new();
    private string? _errorMessage;
    private bool _isProcessing;
    private bool _acceptTerms = false;

    private async Task HandleRegisterAsync()
    {
        _isProcessing = true;
        _errorMessage = null;

        if (!_acceptTerms)
        {
            _errorMessage = "Musisz zaakceptowaƒá regulamin";
            _isProcessing = false;
            return;
        }

        if (_model.Password != _model.ConfirmPassword)
        {
            _errorMessage = "Has≈Ça nie sƒÖ identyczne";
            _isProcessing = false;
            return;
        }

        if (_model.Password.Length < 8)
        {
            _errorMessage = "Has≈Ço musi mieƒá minimum 8 znak√≥w";
            _isProcessing = false;
            return;
        }

        try
        {
            var result = await AuthService.RegisterAsync(_model.Email, _model.Password, _model.FullName);

            if (result.Succeeded)
            {
                Snackbar.Add("‚úÖ Konto utworzono pomy≈õlnie!", Severity.Success);
                NavigationManager.NavigateTo("/");
            }
            else
            {
                _errorMessage = result.ErrorMessage;
            }
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private class RegisterModel
    {
        public string FullName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
    }
