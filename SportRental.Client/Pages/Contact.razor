                        </a>
                        <a href="#" class="w-12 h-12 bg-pink-100 hover:bg-pink-200 rounded-lg flex items-center justify-center transition">
                            <svg class="w-6 h-6 text-pink-600" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
                            </svg>
                        </a>
                        <a href="#" class="w-12 h-12 bg-gray-100 hover:bg-gray-200 rounded-lg flex items-center justify-center transition">
                            <svg class="w-6 h-6 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white rounded-2xl shadow-sm p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Wyślij wiadomość</h2>
                
                <EditForm Model="@_formModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    
                    <div class="space-y-4">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Imię i nazwisko *</label>
                            <InputText id="name" @bind-Value="_formModel.Name" 
                                       class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
                                       placeholder="Jan Kowalski" />
                            <ValidationMessage For="@(() => _formModel.Name)" class="text-red-600 text-sm mt-1" />
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                            <InputText id="email" @bind-Value="_formModel.Email" type="email"
                                       class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
                                       placeholder="jan.kowalski@example.com" />
                            <ValidationMessage For="@(() => _formModel.Email)" class="text-red-600 text-sm mt-1" />
                        </div>

                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon</label>
                            <InputText id="phone" @bind-Value="_formModel.Phone" 
                                       class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
                                       placeholder="+48 123 456 789" />
                        </div>

                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Temat *</label>
                            <InputText id="subject" @bind-Value="_formModel.Subject" 
                                       class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
                                       placeholder="Pytanie o rezerwację" />
                            <ValidationMessage For="@(() => _formModel.Subject)" class="text-red-600 text-sm mt-1" />
                        </div>

                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Wiadomość *</label>
                            <InputTextArea id="message" @bind-Value="_formModel.Message" rows="5"
                                           class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" 
                                           placeholder="Opisz swoje pytanie lub problem..." />
                            <ValidationMessage For="@(() => _formModel.Message)" class="text-red-600 text-sm mt-1" />
                        </div>

                        <button type="submit" 
                                disabled="@_isSubmitting"
                                class="w-full bg-indigo-600 hover:bg-indigo-700 disabled:bg-gray-400 text-white font-semibold py-3 px-6 rounded-lg transition shadow-sm">
                            @if (_isSubmitting)
                            {
                                <span>Wysyłanie...</span>
                            }
                            else
                            {
                                <span>Wyślij wiadomość</span>
                            }
                        </button>

                        @if (_submitSuccess)
                        {
                            <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
                                ✓ Wiadomość została wysłana! Odpowiemy najszybciej jak to możliwe.
                            </div>
                        }

                        @if (_submitError != null)
                        {
                            <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                                ✗ @_submitError
                            </div>
                        }
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private ContactFormModel _formModel = new();
    private bool _isSubmitting;
    private bool _submitSuccess;
    private string? _submitError;

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        _submitSuccess = false;
        _submitError = null;

        try
        {
            // Symulacja wysyłania - w prawdziwej aplikacji tutaj byłoby wywołanie API
            await Task.Delay(1000);

            // TODO: Implement actual email sending or API call
            // await ApiService.SendContactMessageAsync(_formModel);

            _submitSuccess = true;
            _formModel = new(); // Reset formularza
        }
        catch (Exception ex)
        {
            _submitError = $"Wystąpił błąd: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private class ContactFormModel
    {
        [Required(ErrorMessage = "Imię i nazwisko jest wymagane")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email jest wymagany")]
        [EmailAddress(ErrorMessage = "Podaj poprawny adres email")]
        public string Email { get; set; } = string.Empty;

        public string? Phone { get; set; }

        [Required(ErrorMessage = "Temat jest wymagany")]
        public string Subject { get; set; } = string.Empty;

        [Required(ErrorMessage = "Wiadomość jest wymagana")]
        [MinLength(10, ErrorMessage = "Wiadomość musi mieć co najmniej 10 znaków")]
        public string Message { get; set; } = string.Empty;
    }
}

