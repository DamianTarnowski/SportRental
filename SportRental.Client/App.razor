@using Microsoft.AspNetCore.Components.Authorization
@using SportRental.Client.Pages

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CustomErrorBoundary>
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <MudContainer Class="mt-16">
                            <MudAlert Severity="Severity.Error">
                                <MudText Typo="Typo.h6">Brak dostępu</MudText>
                                <MudText>Nie masz uprawnień do tej strony.</MudText>
                            </MudAlert>
                        </MudContainer>
                    }
                </NotAuthorized>
                <Authorizing>
                    <MudContainer Class="mt-16 text-center">
                        <MudProgressCircular Indeterminate="true" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Class="mt-4">Sprawdzanie uprawnień...</MudText>
                    </MudContainer>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <NotFound />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
</CustomErrorBoundary>
