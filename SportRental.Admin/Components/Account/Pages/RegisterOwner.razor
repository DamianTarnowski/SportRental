@code {
    private TenantInvitation? invitation;
    private string? errorMessage;
    private string? registerError;
    private bool isSubmitting = false;
    private bool isRegistered = false;

    [SupplyParameterFromQuery]
    private string? Token { get; set; }

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (RegistrationFlags.AllowOwnerSelfRegistration)
        {
            return;
        }

        if (string.IsNullOrEmpty(Token))
        {
            errorMessage = "Brak tokenu zaproszenia w linku.";
            return;
        }

        var tokenTrimmed = Token.Trim();
        
        await using var db = await DbFactory.CreateDbContextAsync();
        
        invitation = await db.TenantInvitations
            .AsNoTracking()
            .FirstOrDefaultAsync(i => i.Token == tokenTrimmed);

        if (invitation == null)
        {
            errorMessage = "Zaproszenie nie istnieje lub zosta≈Ço usuniƒôte.";
            return;
        }

        if (invitation.IsUsed)
        {
            errorMessage = "To zaproszenie zosta≈Ço ju≈º wykorzystane.";
            invitation = null;
            return;
        }

        if (invitation.ExpiresAtUtc < DateTime.UtcNow)
        {
            errorMessage = "Zaproszenie wygas≈Ço. Popro≈õ o nowe zaproszenie.";
            invitation = null;
            return;
        }

        // Pre-fill form
        Input.Email = invitation.Email;
        Input.TenantName = invitation.TenantName ?? "";
    }

    public async Task RegisterUser()
    {
        if (!RegistrationFlags.AllowOwnerSelfRegistration && invitation == null) return;
        
        isSubmitting = true;
        registerError = null;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            if (RegistrationFlags.AllowOwnerSelfRegistration)
            {
                if (string.IsNullOrWhiteSpace(Input.Email))
                {
                    registerError = "Email jest wymagany.";
                    return;
                }
                Input.Email = Input.Email.Trim().ToLowerInvariant();
            }

            // Create new tenant
            var tenantId = Guid.NewGuid();
            var tenant = new Tenant
            {
                Id = tenantId,
                Name = Input.TenantName,
                CreatedAtUtc = DateTime.UtcNow
            };
            db.Tenants.Add(tenant);

            // Create company info
            var companyInfo = new CompanyInfo
            {
                Id = Guid.NewGuid(),
                TenantId = tenantId,
                Name = Input.TenantName,
                Email = Input.Email,
                PhoneNumber = Input.PhoneNumber,
                CreatedAtUtc = DateTime.UtcNow,
                UpdatedAtUtc = DateTime.UtcNow
            };
            db.CompanyInfos.Add(companyInfo);

            await db.SaveChangesAsync();

            // Create user
            var user = new ApplicationUser
            {
                UserName = Input.Email,
                Email = Input.Email,
                EmailConfirmed = true,
                TenantId = tenantId,
                PhoneNumber = Input.PhoneNumber
            };

            var result = await UserManager.CreateAsync(user, Input.Password);

            if (!result.Succeeded)
            {
                registerError = string.Join(", ", result.Errors.Select(e => e.Description));
                return;
            }

            // Add Owner role
            await UserManager.AddToRoleAsync(user, RoleNames.Owner);
            await UserManager.AddToRoleAsync(user, RoleNames.Client);

            // Mark invitation as used
            if (!RegistrationFlags.AllowOwnerSelfRegistration)
            {
                invitation!.IsUsed = true;
                invitation.UsedAtUtc = DateTime.UtcNow;
                invitation.CreatedTenantId = tenantId;
                db.TenantInvitations.Update(invitation);
                await db.SaveChangesAsync();
            }

            Logger.LogInformation("New owner registered: {Email}, Tenant: {TenantName}", Input.Email, Input.TenantName);

            isRegistered = true;

            // Auto sign in
            await SignInManager.SignInAsync(user, isPersistent: false);

            // Redirect after delay
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/dashboard", true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during owner registration");
            registerError = "WystƒÖpi≈Ç b≈ÇƒÖd podczas rejestracji. Spr√≥buj ponownie.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "Nazwa wypo≈ºyczalni jest wymagana")]
        [StringLength(200, MinimumLength = 3, ErrorMessage = "Nazwa musi mieƒá od 3 do 200 znak√≥w")]
        public string TenantName { get; set; } = "";

        [Required(ErrorMessage = "Email jest wymagany")]
        [EmailAddress(ErrorMessage = "Nieprawid≈Çowy format email")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Has≈Ço jest wymagane")]
        [StringLength(100, ErrorMessage = "Has≈Ço musi mieƒá minimum {2} znak√≥w", MinimumLength = 8)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Potwierdzenie has≈Ça jest wymagane")]
        [Compare("Password", ErrorMessage = "Has≈Ça nie sƒÖ identyczne")]
        [DataType(DataType.Password)]
        public string ConfirmPassword { get; set; } = "";

        [Phone(ErrorMessage = "Nieprawid≈Çowy format numeru telefonu")]
        public string? PhoneNumber { get; set; }
    }
}

