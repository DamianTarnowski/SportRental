@page "/Account/ResetPasswordConfirmation"

<PageTitle>Hasło zmienione - SportRental</PageTitle>

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-brand-accent"></div>
        
        <div class="auth-logo">
            <div class="auth-logo-icon" style="background: linear-gradient(135deg, #22c55e, #16a34a);">
                <svg viewBox="0 0 24 24" fill="white" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
            </div>
            <h1 class="auth-title">Hasło zmienione!</h1>
            <p class="auth-subtitle">Twoje hasło zostało pomyślnie zresetowane</p>
        </div>

        <div class="auth-alert auth-alert-success">
            <svg class="auth-alert-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <div>
                <strong>Sukces!</strong><br/>
                Możesz teraz zalogować się używając nowego hasła.
            </div>
        </div>

        <a href="Account/Login" class="auth-submit" style="text-decoration: none; display: block; text-align: center;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline; vertical-align: middle; margin-right: 8px;">
                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/>
                <polyline points="10 17 15 12 10 7"/>
                <line x1="15" y1="12" x2="3" y2="12"/>
            </svg>
            Przejdź do logowania
        </a>
        
        <div class="auth-footer">
            &copy; @DateTime.Now.Year SportRental. Wszelkie prawa zastrzeżone.
        </div>
    </div>
</div>
