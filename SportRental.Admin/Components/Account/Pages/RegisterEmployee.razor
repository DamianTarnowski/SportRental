@code {
    private EmployeeInvitation? invitation;
    private string? tenantName;
    private string? errorMessage;
    private string? registerError;
    private bool isSubmitting = false;
    private bool isRegistered = false;

    [SupplyParameterFromQuery]
    private string? Token { get; set; }

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Token))
        {
            errorMessage = "Brak tokenu zaproszenia w linku.";
            return;
        }

        var tokenTrimmed = Token.Trim();
        
        await using var db = await DbFactory.CreateDbContextAsync();
        
        // Find invitation without tenant filter
        invitation = await db.EmployeeInvitations
            .IgnoreQueryFilters()
            .AsNoTracking()
            .FirstOrDefaultAsync(i => i.Token == tokenTrimmed);

        if (invitation == null)
        {
            errorMessage = "Zaproszenie nie istnieje lub zosta≈Ço usuniƒôte.";
            return;
        }

        if (invitation.IsUsed)
        {
            errorMessage = "To zaproszenie zosta≈Ço ju≈º wykorzystane.";
            invitation = null;
            return;
        }

        if (invitation.ExpiresAtUtc < DateTime.UtcNow)
        {
            errorMessage = "Zaproszenie wygas≈Ço. Popro≈õ o nowe zaproszenie.";
            invitation = null;
            return;
        }

        // Get tenant name
        var tenant = await db.Tenants.AsNoTracking().FirstOrDefaultAsync(t => t.Id == invitation.TenantId);
        tenantName = tenant?.Name ?? "Nieznana wypo≈ºyczalnia";

        // Pre-fill form
        Input.Email = invitation.Email;
        Input.FullName = invitation.FullName ?? "";
    }

    public async Task RegisterUser()
    {
        if (invitation == null) return;
        
        isSubmitting = true;
        registerError = null;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            db.SetTenant(invitation.TenantId);

            // Check if user already exists
            var existingUser = await UserManager.FindByEmailAsync(Input.Email);
            ApplicationUser user;
            bool userCreated = false;

            if (existingUser != null)
            {
                // User exists - just add to tenant and role
                user = existingUser;
                
                // Update tenant if needed
                if (user.TenantId != invitation.TenantId)
                {
                    user.TenantId = invitation.TenantId;
                    await UserManager.UpdateAsync(user);
                }
            }
            else
            {
                // Create new user
                user = new ApplicationUser
                {
                    UserName = Input.Email,
                    Email = Input.Email,
                    EmailConfirmed = true,
                    TenantId = invitation.TenantId,
                    PhoneNumber = Input.PhoneNumber
                };

                var result = await UserManager.CreateAsync(user, Input.Password);

                if (!result.Succeeded)
                {
                    registerError = string.Join(", ", result.Errors.Select(e => e.Description));
                    return;
                }
                userCreated = true;
            }

            // Ensure Employee role exists
            if (!await RoleManager.RoleExistsAsync(RoleNames.Employee))
            {
                await RoleManager.CreateAsync(new IdentityRole<Guid> { Name = RoleNames.Employee, NormalizedName = RoleNames.Employee.ToUpperInvariant() });
            }

            // Add Employee and Client roles
            if (!await UserManager.IsInRoleAsync(user, RoleNames.Employee))
            {
                await UserManager.AddToRoleAsync(user, RoleNames.Employee);
            }
            if (!await UserManager.IsInRoleAsync(user, RoleNames.Client))
            {
                await UserManager.AddToRoleAsync(user, RoleNames.Client);
            }

            // Create Employee record
            var employee = new Employee
            {
                Id = Guid.NewGuid(),
                TenantId = invitation.TenantId,
                FullName = Input.FullName,
                Email = Input.Email,
                Telephone = Input.PhoneNumber ?? "",
                City = Input.City ?? "",
                Position = "Pracownik",
                Role = invitation.Role,
                UserId = user.Id,
                CreatedAtUtc = DateTime.UtcNow
            };
            db.Employees.Add(employee);

            // Add TenantUser record
            var existingTenantUser = await db.TenantUsers.FirstOrDefaultAsync(tu => tu.TenantId == invitation.TenantId && tu.UserId == user.Id);
            if (existingTenantUser == null)
            {
                db.TenantUsers.Add(new TenantUser
                {
                    Id = Guid.NewGuid(),
                    TenantId = invitation.TenantId,
                    UserId = user.Id,
                    DisplayName = Input.FullName,
                    Role = RoleNames.Employee
                });
            }

            // Mark invitation as used
            var invitationToUpdate = await db.EmployeeInvitations.IgnoreQueryFilters().FirstAsync(i => i.Id == invitation.Id);
            invitationToUpdate.IsUsed = true;
            invitationToUpdate.UsedAtUtc = DateTime.UtcNow;
            invitationToUpdate.CreatedEmployeeId = employee.Id;

            await db.SaveChangesAsync();

            Logger.LogInformation("New employee registered: {Email}, Tenant: {TenantId}, Role: {Role}", Input.Email, invitation.TenantId, invitation.Role);

            isRegistered = true;

            // Auto sign in
            await SignInManager.SignInAsync(user, isPersistent: false);

            // Redirect after delay
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/dashboard", true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during employee registration");
            registerError = "WystƒÖpi≈Ç b≈ÇƒÖd podczas rejestracji. Spr√≥buj ponownie.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "Imiƒô i nazwisko jest wymagane")]
        [StringLength(200, MinimumLength = 2, ErrorMessage = "Imiƒô i nazwisko musi mieƒá od 2 do 200 znak√≥w")]
        public string FullName { get; set; } = "";

        [Required(ErrorMessage = "Email jest wymagany")]
        [EmailAddress(ErrorMessage = "Nieprawid≈Çowy format email")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Has≈Ço jest wymagane")]
        [StringLength(100, ErrorMessage = "Has≈Ço musi mieƒá minimum {2} znak√≥w", MinimumLength = 8)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [Required(ErrorMessage = "Potwierdzenie has≈Ça jest wymagane")]
        [Compare("Password", ErrorMessage = "Has≈Ça nie sƒÖ identyczne")]
        [DataType(DataType.Password)]
        public string ConfirmPassword { get; set; } = "";

        [Phone(ErrorMessage = "Nieprawid≈Çowy format numeru telefonu")]
        public string? PhoneNumber { get; set; }

        public string? City { get; set; }
    }
}
