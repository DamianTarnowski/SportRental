                                <MudChip T="string" Color="Color.Default" Size="Size.Small" Style="background-color: rgba(255,255,255,0.2); color: white;">
                                    @group.Value.Count rezerwacji
                                </MudChip>
                            </MudStack>
                        </div>
                        
                        <!-- Reservations List -->
