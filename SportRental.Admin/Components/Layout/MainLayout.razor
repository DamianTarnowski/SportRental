@inherits LayoutComponentBase
@implements IDisposable

@inject SportRental.Admin.Services.UI.ThemeService Theme
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject SportRental.Infrastructure.Tenancy.ITenantProvider TenantProvider

@* Providers przeniesione do Components/Routes.razor, aby uniknąć konfliktów rendererów *@
<MudPopoverProvider />
<MudAppBar Elevation="1" Color="Color.Primary">
    <MudText Class="ms-2" Typo="Typo.h6">SportRental</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.DarkMode" Color="Color.Inherit" OnClick="() => Theme.Toggle()" title="Przełącz motyw" />
</MudAppBar>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
    </div>

@code {
    protected override void OnInitialized()
    {
        Theme.OnChanged += StateHasChanged;
        _ = LoadBranding();
    }
    public void Dispose()
    {
        Theme.OnChanged -= StateHasChanged;
    }

    private async Task LoadBranding()
    {
        var tenantId = TenantProvider.GetCurrentTenantId();
        if (tenantId is null) return;
        await using var Db = await DbFactory.CreateDbContextAsync();
        Db.SetTenant(tenantId);
        var t = await Db.Tenants.AsNoTracking().FirstOrDefaultAsync(x => x.Id == tenantId.Value);
        if (t != null)
        {
            Theme.SetColors(t.PrimaryColorHex, t.SecondaryColorHex);
            StateHasChanged();
        }
    }
}
